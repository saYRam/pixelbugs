#capturefor(title)
    $strings.Titles_NewIssue
#end

#capturefor(script)
    Event.observe(window, 'load', function() {   
        new Validation('form', {
            immediate: true,
            useTitles: true
        });         
    });
#end

<form action="Create.ashx" method="post" id="form">
    <div>
        $Form.LabelFor("issue.summary", $strings.Labels_Summary)
        $Form.TextField("issue.summary", "%{class='required', title='$strings.Errors_RequiredField'}")
    </div>
    
    <div>
        $Form.LabelFor("issue.description", $strings.Labels_Description)
        $Form.TextArea("issue.description", "%{class='required', title='$strings.Errors_RequiredField'}")
    </div>
    
    <div>
        $Form.LabelFor("issue.assignedTo.id", $strings.Labels_AssignedTo)
        $Form.Select("issue.assignedTo.id", $users, "%{value='Id', text='FullName', firstoption='$strings.Options_Unassigned'}")
    </div>
    
    <div>
        $Form.LabelFor("issue.reportedBy.id", $strings.Labels_ReportedBy)
        $Form.Select("issue.reportedBy.id", $users, "%{value='Id', text='FullName', firstoption='$strings.Options_Anonymous'}")
    </div>
    
    <div>
        $Form.Submit($strings.Buttons_Save, "%{id='save'}")
    </div>
</form>